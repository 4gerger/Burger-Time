<img class="burger-icon" src="/assets/img/burger.png" alt="Burger Icon">
<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Click the Burger to Devour it!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <form class="create-form">
    <div class="form-group">
      <input type="text" id="burger" name="name" placeholder="Enter a Burger you wish to eat!">
      <br>
      <button type="submit">Order this Burger</button>
    </div>
  </form>
</div>